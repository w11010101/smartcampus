html{
  font-size: 100px;
  background:#fff;
  height: 100%;
  font-family: 'Microsoft Yahei';
}
html *{
  margin:0;
  padding: 0; 
  font-style:normal;
  font-weight: normal;
  list-style: none;
}

body{
  height: 100%;
  overflow:hidden;
}

.logo{
  width: .81rem;
  height: .81rem;
  display: block;
  margin: 1.17rem auto .21rem auto;
}
h1{
  font-size: .23rem;
  color:rgb(51,51,51);
  text-align: center;

}
p{
  font-size: .15rem;
  color:rgb(51,51,51);
  text-align: center;
  margin-top: .15rem;
}
.download div{
  margin-top: .6rem;
  text-align: center;
  font-size: 0;
}
.download div a{
  display: inline-block;
  width: 1.65rem;
  height: .44rem;
}
.download div a+a{
  margin-left: .15rem;
}
.download div a img{
  display: block;
  width: 100%;
  height: 100%;
}

/* media */

@media screen and (max-width: 320px) {
    html {
        font-size: calc(100vw/3.75);
    }
}
@media screen and (min-width: 376px) and (max-width: 414px) {
    html {
        font-size: calc(100vw/4.14);
    }
}
@media screen and (min-width: 415px) {
    html {
        font-size: 100px;
    }
}