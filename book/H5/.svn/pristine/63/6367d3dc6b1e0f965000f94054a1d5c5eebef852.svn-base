html{
  font-size: 100px;
  background:#fff;
  height: 100%;
  font-family: 'Microsoft Yahei';
}
html *{
  margin:0;
  padding: 0; 
  font-style:normal;
  font-weight: normal;
  list-style: none;
}

body{
  height: 100%;
  overflow:hidden;
}
button{
  outline: none;
}
.logo{
  width: .81rem;
  height: .81rem;
  display: block;
  margin: 1.17rem auto .21rem auto;
}
h1{
  font-size: .23rem;
  color:rgb(51,51,51);
  text-align: center;

}
p{
  font-size: .15rem;
  color:rgb(51,51,51);
  text-align: center;
  margin-top: .15rem;
}
.download .downBtns{
  margin-top: .6rem;
  text-align: center;
  font-size: 0;
}
.download .downBtns a{
  display: inline-block;
  width: 1.65rem;
  height: .44rem;
}
.download .downBtns a+a{
  margin-left: .15rem;
}
.download .downBtns a img{
  display: block;
  width: 100%;
  height: 100%;
}
.download .tips-box{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  /*z-index: -1;*/
  z-index: 11;
  transform: translateY(100%);
  -webkit-transform: translateY(100%);
}
.download .mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  background: rgba(0,0,0,.2);
  opacity: 0;
  transition: all .2s ease-in;
  -webkit-transition: all .2s ease-in;
}
.download .tips{
  font-size: .15rem;
  position: fixed;
  top:50%;
  left: 50%;
  margin-top: -.5rem;
  margin-left: -1rem;
  background: rgba(0,0,0,.7);
  width: 2rem;
  height:.5rem;
  text-align: center;
  border-radius: 5px;
  opacity: 0;
  transition: all .2s ease-in;
  -webkit-transition: all .2s ease-in;
}
.download .tips p{
  color:#fff;
  height: .5rem;
  line-height: .5rem;
  margin-top: 0;
}
.download .tips button{
  display: block;
  width: .8rem;
  height: .3rem;
  line-height: .3rem;
  margin:0 auto;
  background: none;
  border:1px solid #d0d0d0;
  border-radius: 5px;
}
.download .tips button:active{
  background: #d0d0d0;
  color:#fff;
}
.download .tips-box.show{
  
  transform: translateY(0);
  -webkit-transform: translateY(0);
}
.download .tips-box.show .mask{
  opacity: 1;
}
.download .tips-box.show .tips{
  opacity: 1;
}
/* media */

@media screen and (max-width: 320px) {
    html {
        font-size: calc(100vw/3.75);
    }
}
@media screen and (min-width: 376px) and (max-width: 414px) {
    html {
        font-size: calc(100vw/4.14);
    }
}
@media screen and (min-width: 415px) {
    html {
        font-size: 100px;
    }
}